@model IEnumerable<SCRS.Models.Student>

@{
    ViewBag.Title = "Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-graduate mr-2"></i>Students</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus mr-1"></i> Add New Student
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StudentID</td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.DateOfBirth.ToShortDateString()</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", new { id = item.StudentID })" class="btn btn-sm btn-warning" title="Edit Student">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.StudentID })" class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-info-circle mr-1"></i> Details
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.StudentID })" class="btn btn-sm btn-danger" title="Delete Student">
                                        <i class="fas fa-trash mr-1"></i> Delete
                                    </a>
                                    <a href="@Url.Action("Courses", new { id = item.StudentID })" class="btn btn-sm btn-success" title="View Courses">
                                        <i class="fas fa-book mr-1"></i> Courses
                                    </a>
                                    <a href="@Url.Action("Register", new { id = item.StudentID })" class="btn btn-sm btn-primary" title="Register for Course">
                                        <i class="fas fa-plus-circle mr-1"></i> Register
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle mr-2"></i> No students found. Click "Add New Student" to add a student.
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
        <i class="fas fa-arrow-left mr-1"></i> Back to Home
    </a>
</div> 